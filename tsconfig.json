{
    "compilerOptions": {
        "charset": "utf8",
        "forceConsistentCasingInFileNames": true,
        "newLine": "lf",
        "noFallthroughCasesInSwitch": true,
        "noImplicitReturns": true,
        "noUnusedParameters": true,
        "rootDir": "./src/",
        "strict": true,
        "declaration": true,
        "moduleResolution": "node",
        "module": "commonjs",
        "outDir": "./lib/",
        "skipLibCheck": true,
        "target": "es2019"
    },
    "include": ["src/"],
    "deno2node": {
        "shim": "./src/shim.node.ts"
    }
}
